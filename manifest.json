{
  "manifest_version": 3,
  "name": "Video Transcript Summarizer",
  "version": "1.2", 
  "description": "Automatically fetches, summarizes, and allows downloading YouTube video transcripts.",
  "permissions": [
    "activeTab",
    "scripting",
    "downloads" 
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
    
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ]
}